<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InvernaderoInteligenteMovil.Views.PantallaPrincipal"
             Title="PantallaPrincipal"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto, *, Auto">
        <!-- Encabezado con nombre y fecha -->
        <Frame HeightRequest="180"
               CornerRadius="30"
               Margin="0,-20,0,20"
               Padding="20,50,20,20"
               BackgroundColor="#556B2F">
            <VerticalStackLayout>
                <!-- Nombre del usuario -->
                <Label Text="{Binding NombreCompleto}"
                       FontSize="28"
                       TextColor="White"
                       FontAttributes="Bold"/>

                <!-- Fecha actual -->
                <Label Text="{Binding FechaActual}"
                       FontSize="14"
                       TextColor="White"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Lista de invernaderos con Pull-to-Refresh -->
        <RefreshView Grid.Row="1"
                    IsRefreshing="{Binding IsRefreshing}"
                    Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Invernaderos}"
                           Margin="0,10"
                            x:Name="InvernaderosCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="15"
                               Padding="0"
                               Margin="10"
                               HasShadow="True"
                               BorderColor="#EEF5E1">
                            <Grid RowDefinitions="150, Auto, Auto, Auto" ColumnDefinitions="*, Auto">
                                <!-- Imagen del invernadero -->
                                <Image Source="{Binding Imagen}"
                                       Aspect="AspectFill"
                                       HeightRequest="150"
                                       Grid.ColumnSpan="2"/>

                                <!-- Nombre del invernadero -->
                                <Label Grid.Row="1"
                                       Text="{Binding Nombre}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#556B2F"
                                       Margin="15,10,15,0"/>

                                <!-- Nombre de la planta (NUEVA POSICIÓN) -->
                                <Label Grid.Row="2"
                                       Text="{Binding NombrePlanta}"
                                       FontSize="14"
                                       TextColor="#8F9779"
                                       Margin="15,0,15,0"/>

                                <!-- Tipo de planta -->
                                <Label Grid.Row="3"
                                       Text="{Binding TipoPlanta}"
                                       FontSize="14"
                                       TextColor="#8F9779"
                                       Margin="15,0,15,10"/>

                                <!-- Botón "Ver Detalles" -->
                                <Button Grid.Row="3"
                                        Grid.Column="1"
                                        Text="Ver Detalles"
                                        BackgroundColor="#6B8E23"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Margin="0,0,10,10"
                                        WidthRequest="120"
                                        HeightRequest="40"
                                        Command="{Binding BindingContext.VerDetallesCommand, Source={x:Reference InvernaderosCollection}}"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Botón flotante (+) -->
        <Button Grid.Row="2"
                Text="+"
                BackgroundColor="#556B2F"
                TextColor="White"
                FontSize="30"
                CornerRadius="50"
                WidthRequest="70"
                HeightRequest="70"
                Margin="0,0,20,20"
                HorizontalOptions="End"
                VerticalOptions="End"
                Command="{Binding AgregarInvernaderoCommand}"/>
    </Grid>
</ContentPage>